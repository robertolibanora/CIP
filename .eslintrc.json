{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/*.html",
    "frontend/templates/**/*",
    "**/templates/**/*",
    "venv/**/*",
    "__pycache__/**/*",
    "*.py"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
