        <!-- Projects Info Bar -->
        <div class="admin-card admin-card-body mb-6">
            <div class="admin-flex admin-flex--between">
                <div class="admin-flex">
                    <span class="admin-text-small text-gray-500 mr-4" id="total-projects-indicator">
