# Configurazione Produzione - CIP Immobiliare
FLASK_ENV=production
FLASK_DEBUG=0
HOST=0.0.0.0
PORT=8090

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/cip_immobiliare_prod

# Sicurezza
SECRET_KEY=your-super-secret-production-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cip_immobiliare/app.log

# Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/www/cip_immobiliare/uploads
